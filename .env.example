# Braze API Configuration
BRAZE_API_KEY=your-rest-api-key
BRAZE_API_URL=https://rest.iad-01.braze.com  # Replace with your cluster endpoint
BRAZE_APP_ID=your-app-id

# Access Control Configuration
BRAZE_ALLOWED_WORKSPACES=workspace1,workspace2  # Comma-separated list
BRAZE_ALLOWED_CAMPAIGN_TYPES=email,push,sms     # Comma-separated list
BRAZE_ALLOWED_SEGMENTS=segment1,segment2         # Comma-separated list, or * for all
BRAZE_READ_ONLY_MODE=false                       # Set to true for read-only access
BRAZE_MASK_PII_FIELDS=true                       # Mask sensitive user data

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600                             # Cache TTL in seconds

# Rate Limiting
BRAZE_RATE_LIMIT_REQUESTS_PER_MINUTE=1000       # API rate limit
BRAZE_ENABLE_QUEUE=true                          # Enable job queue for batch operations

# Logging
LOG_LEVEL=info                                   # debug, info, warn, error
LOG_FORMAT=json                                  # json or pretty

# Security
BRAZE_ENCRYPT_SENSITIVE_DATA=true                # Encrypt sensitive fields in logs
BRAZE_AUDIT_LOG_ENABLED=true                     # Enable audit logging